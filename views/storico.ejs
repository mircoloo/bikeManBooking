<style>
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 80%;
    }
    
    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }
    
    tr:nth-child(even) {
      background-color: #dddddd;
    }
</style>
</head>

<body>
<body>
    <h2>Storico manutenzioni</h2>

<table>    
    <tr>
    <th>Data prenotazione</th>
    <th>Problema</th>
    <th>Bici</th>    
    <th>Cancella</th>
    </tr>
    
<% prenotazione.forEach( p => { %>
  <tr>
    <td><%= p.data.toDateString() %></td> 
    <td><%= p.problema %></td>
    <td><%= p.bici %></td> 
    <% if(p.data > Date.now()){ %>
      <td>
        <form action="/storico/<%= p._id %>" method="POST">
          <button type="submit">Cancella</button>
        </form>
      </td>
    <% } else { %>
      <td></td>  
    <% } %>
  </tr>
<% }) %>

</table>